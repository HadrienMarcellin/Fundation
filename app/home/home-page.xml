<Page navigatingTo="navigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">
    
    <ActionBar>
        <Label text="Home" />
    </ActionBar>
    
    <StackLayout height="100%">
        <ListView height="100%" separatorColor="transparent" items="{{ buttons }}" itemTap="{{ onButtonTap }}">
            <ListView.itemTemplate>
                <Label text="{{ text }}" />
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>